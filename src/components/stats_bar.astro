---
let members = '20+';
let photos = '100+';
let events = '50+';
let memories = '80+';
---

<div class="stat-bar-container">
    <section>
        <div>
            <p class="num">{members}</p>
            <p class="stat">Members</p>
        </div>
        <div>
            <p class="num">{photos}</p>
            <p class="stat">Photographs</p>
        </div>
        <div>
            <p class="num">{events}</p>
            <p class="stat">Club Events</p>
        </div>
        <div>
            <p class="num">{memories}</p>
            <p class="stat">Memories</p>
        </div>
    </section>
</div>

