---
import Navbar from "../components/navbar.astro";
import ImageScaffold from "../components/img_scaffold.astro"
import Footer from "../components/footer.astro";
import StatsBar from "../components/stats_bar.astro";
import ExecTeam from "../components/exec_team.astro";

import '../styles/global.css';

import {ambassadorsImage} from "../api/getCurrentTeamMembers";
// let ambassadors = "/AboutUs/TeamMembers/Ambassadors/AIGSQ_ambassadors.jpg"
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=League+Spartan:wght@100..900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
        <title>About Us - AIGSQ - Queen's University</title>
        <link rel="shortcut icon" href="/favicon.jpg" type="image/x-icon">
    </head>
    <body>
        <Navbar></Navbar>
        <header>
            <h1>About Us</h1>
            <h3 id="heading-blurb">Founded in 2018, AIGSQ supports Indian undergraduate and graduate students and their families in transitioning to Queenâ€™s and Kingston, and has been expanding ever since. Here are some highlights from our most recent events.</h3>
        </header>
        <ImageScaffold></ImageScaffold>
        <StatsBar></StatsBar>
        <ExecTeam></ExecTeam>
        <h2 id="ambassadors-title">Ambassadors</h2>
        <img src={ambassadorsImage.url} alt="" id="ambassadors">
        <!-- <img src={ambassadors} alt="" id="ambassadors"> -->
        <h2>Executive History</h2>
        <section id="exec-history">
            <div>
                <h3>Founders</h3>
                <li>Atul Jaiswal</li>
                <li>Uchitta Vashist</li>
            </div>
            <div>
                <h3>Past Presidents</h3>
                <li>2023 - Bhavya Bogra</li>
                <li>2022 - Bhavya Bogra</li>
                <li>2021 - Abhishek Awasthi - Navjit Gaurav</li>
                <li>2020 - Abhishek Awasthi - Gagandeep Kaur</li>
                <li>2019 - Rohit Shukla</li>
            </div>
        </section>
        <Footer></Footer>
    </body>
</html>

<style>
    header {
        background-color: #006E5E;
        text-align: center;
        padding: 1.25rem 0;
        margin-bottom: 6vh;
    }

    h1 {
        font-family: 'League Spartan';
        font-weight: 700;
        font-size: 5rem;
        letter-spacing: 1px;
        color: white;
    }
    
    h2 {
        padding-top: 6vh;
        text-align: center;
        font-family: 'League Spartan';
        font-size: 3.5rem;
        color: black;
    }

    #heading-blurb {
        color: white;
        margin-left: auto;
        margin-right: auto;
    }

    h3 {
        /* font-family: 'League Spartan';
        font-weight: 500; */
        font-family: 'Libre Baskerville';
        font-weight: 400;
        font-size: 2rem;
        line-height: 3rem;
        width: 80%;
        
    }

    #ambassadors {
        margin-top: 20px;
        width: 50%;
        margin-left: 25%;
    }

    #exec-history {
        position: relative;
        left: 25%;
        max-width: 50%;
        display: flex;
        flex-direction: column;
    }

    li {
        font-family: 'Libre Baskerville';
        font-size: 1.4rem;
        letter-spacing: 1px;
        line-height: 2.5rem;
    }
</style>