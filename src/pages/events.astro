        margin-bottom: 20px;
    }

    .tab-link {
        background-color: #f1f1f1;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        margin: 0 5px;
        font-size: 16px;
    }

    .tab-link:hover {
        background-color: #ddd;
    }

    .tab-link.active {
        background-color: #555;
        color: white;
    }

    .tab-content {
        display: none;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .tab-content .event {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .event .img-container {
        width: 28rem;
        height: 28rem;
        background-color: #e2e2e2;
        margin-bottom: 10px;
        /* margin-right: 20px; */
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .event .img-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;    /* Ensures the image keeps its aspect ratio */
        transform: scale(1.1);  /* Slightly scale the image */
    }

    .event-title {
        background-color: #800000;
        color: white;
        padding: 10px;
        width: 65%;
        text-align: center;
    }

    li {
